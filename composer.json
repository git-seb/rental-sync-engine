{
    "name": "rental-sync-engine/wordpress-plugin",
    "description": "WordPress plugin for synchronizing rental properties with multiple PMS systems",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Rental Sync Engine Team",
            "email": "info@rentalsyncengine.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "RentalSyncEngine\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RentalSyncEngine\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 includes/"
    }
}
